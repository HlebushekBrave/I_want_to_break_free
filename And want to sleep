#считываем текст из файла
with open("input.txt", "r") as f:
    lines = f.readlines()
#в файл "output.txt" будет записан результат
with open("output.txt", "w") as f_out:
    for s in lines:
        # удалить все символы, кроме !?,. из строки
        s=s.replace("\n", " ")
        punct = '''()[]{}'@#$%:"\/^;*_'''
        for i in s:
            if i in punct:
                s = s.replace(i, "")
        #разделим текст на слова
        slova = s.split(" ")
        #создаем список уникальных слов
        unique_list = []
        for word in slova:
            if word not in unique_list:
                unique_list.append(word)
        #пример, как выводит: (потом удалить)
        print(unique_list, file=f_out, end='\n')
        # список стартовых слов
        start_list = []
        for i in slova:
            if i.istitle() == True:
                start_list.append(i)
